namespace spine{

#ifdef __STDC_VERSION__
 #define fmodf   SPINE_STD fmod
 #define _strdup SPINE_STD strdup

float acosf(float n)
{
	if(n < -1.0f)n = -1.0f;
	if(n > 1.0f)n = 1.0f;
	return std::acos(n);
}
#endif

}//spine

